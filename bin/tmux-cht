#!/usr/bin/env bash

selected=$(cat ~/.tmux-cht-languages ~/.tmux-cht-commands | fzf)
if [[ -z $selected ]]; then
    exit 0
fi

read -p "Enter Query: " query

if grep -qs "$selected" ~/.tmux-cht-languages; then
    if [[ -z "$query" ]]; then
        tmux neww bash -c "curl -s cht.sh/$selected/learn | less -R"
    else
        query=$(echo $query | tr ' ' '+')
        tmux neww bash -c "curl -s cht.sh/$selected/$query | less -R"
    fi
else
    tmux neww bash -c "curl -s cht.sh/$selected~$query | less -R"
fi
