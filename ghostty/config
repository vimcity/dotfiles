# Ghostty Configuration with Catppuccin Frappe Theme
# ==================================================

# Use the built-in Catppuccin Frappe theme
#theme = "Catppuccin Frappe"
theme = "Ayu Mirage"

# Window settings
window-padding-x = 20
window-padding-y = 20

# Launch maximized
window-decoration = true
window-step-resize = true
window-save-state = always

# Translucency settings
#background-opacity = 0.95

# Font settings
font-family = "JetBrains Mono NF", "JetBrains Mono"
font-size = 16

# Catppuccin Frappe Color Scheme (using built-in theme)
# =====================================================

# Background and foreground
# Override with a darker background than default Frappe (#303446)
background = #232634

# Cursor and selection
cursor-color = #ca9ee6

# Color palette (handled by built-in Catppuccin Frappe theme)

# Shell integration
shell-integration = zsh

# Copy on select
copy-on-select = clipboard

# Keybindings
# Pass Alt+j/k to terminal apps (for nvim line movement)
keybind = alt+j=ignore
keybind = alt+k=ignore

keybind = shift+enter=text:\x1b\r

# Quick terminal toggle (Quake-style dropdown terminal)
keybind = global:cmd+shift+backquote=toggle_quick_terminal


# Custom cursor shader
custom-shader = shaders/cursor_smear_fade.glsl
